<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopWatchActivity"
    android:background="@color/MViolet"
    >
    <ImageView
        android:layout_marginEnd="25dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/icanchor"
        android:layout_width="350dp"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icanchor" />

    <Chronometer
        android:id="@+id/timeHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="460dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintTop_toBottomOf="@id/icanchor"
        />

    <ImageView
        android:layout_marginEnd="25dp"
        android:layout_marginTop="100dp"
        android:id="@+id/bgcircle"
        android:layout_width="350dp"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bgcircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Get Started"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:background="@drawable/bgbtngreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="550dp"
        />
    <Button
        android:id="@+id/btnStop"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Stop"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:background="@drawable/btnred"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="650dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>